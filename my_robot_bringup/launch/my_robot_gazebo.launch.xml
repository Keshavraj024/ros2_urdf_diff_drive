<launch>
     <let name="urdf_path" value="$(find-pkg-share my_robot_description)/urdf/my_robot.urdf.xacro" />
     <let name="rviz_config_path" value="$(find-pkg-share my_robot_description)/rviz/my_robot.rviz" />
     <let name="enable_rviz" value="false" />

     <node pkg="robot_state_publisher" exec="robot_state_publisher">
          <param name="robot_description" value="$(command 'xacro $(var urdf_path)')" />
     </node>

     <node pkg="my_robot_controller" exec="controller" >
          <param name="linear_vel_x" value="0.2"/>
          <param name="angular_yaw" value="1.0"/>
          <param name="forearm_position" value="0.0"/>
          <param name="hand_position" value="0.0"/>
     </node>


     <include file="$(find-pkg-share gazebo_ros)/launch/gazebo.launch.py" >
          <arg name="world" value="$(find-pkg-share my_robot_description)/worlds/my_world.world" />
     </include>

     <node pkg="gazebo_ros" exec="spawn_entity.py" output="screen" args="-topic robot_description -entity my_robot" />

     <group if="$(var enable_rviz)">
          <node pkg="rviz2" exec="rviz2" output="screen" args="-d $(var rviz_config_path)" />
     </group>

</launch>